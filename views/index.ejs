<%- include('./partials/header') %>
<%- include('./partials/nav') %>

<header class="page-header" style="padding-top: 50px">
  <div class="container">
    <div class="row text-center align-items-center">
      <div class="col-lg-6">
        <h1 class="display-5">
          <strong>Moda Fast Fashion</strong>
        </h1>
        <p style="font-size: 1.5rem">
          Atual, Conforto e Qualidade
        </p>
        <a href="/vesti" class="btn btn-outline-primary btn-lg mb-5"
          >Saiba Mais</a
        >
      </div>
      <div class="col-lg-6">
        <div id="qwe" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% for( let index = 0; index < fotoPrimeiroPainel.length; index++ ) { %>
              <% if(index === 0){ %>
                <div class="carousel-item active">
              <% } else { %>
                <div class="carousel-item">
              <% } %>
              <img src="<%= dir1+'/'+String(fotoPrimeiroPainel[index]) %>" class="d-block w-100" alt="img" />
            </div>
            <% } %>
          </div>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#qwe"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#qwe"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>

<section class="galeria" style="padding-top: 20px">
  <div class="container">
    <div class="row align-items-center justify-content-center text-center">
      <!-- meio -->
      <div class="col-lg-6 d-block d-md-block d-lg-none">
        <h2>Coleções Outono / Inverno 2021</h2>
        <a href="/vesti" class="btn btn-outline-primary btn-lg mt-3 mb-4"
          >Saiba Mais</a
        >
      </div>
      <div class="col-lg-6">
        <div id="asd" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% for( let i = 0; i < fotoSegundoPainel.length; i++ ) { %>
              <% if(i === 0){ %>
                <div class="carousel-item active">
              <% } else { %>
                <div class="carousel-item">
              <% } %>
              <img src="<%= dir2+'/'+String(fotoSegundoPainel[i]) %>" class="d-block w-100" alt="img" />
            </div>
            <% } %>
          </div>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#asd"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#asd"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      <!-- fim -->
      <div class="col-lg-6 text-center d-none d-lg-block">
        <h2>Coleções Outono / Inverno 2021</h2>
        <a href="/vesti" class="btn btn-outline-primary btn-lg">Catálogo</a>
      </div>
    </div>
  </div>
</section>

<%- include('./partials/footer') %>