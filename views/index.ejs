          <div class="carousel-inner">
            <% let count = 0 %> 
            <% for( let index = 0; index < fotoPrimeiroPainel.length; index++ ) { %>
              <% if(index === 0){ %>
                <div class="carousel-item active">
              <% } else { %>
                <div class="carousel-item">
              <% } %>
